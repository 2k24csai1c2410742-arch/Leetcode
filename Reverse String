        printf("\"%c\"%s", arr[i], (i == size - 1) ? "" : ",");
    }
    printf("]\n");
}

int main() {
    // Example 1: s = ["h","e","l","l","o"]
    char s1[] = {'h', 'e', 'l', 'l', 'o'};
    size_t size1 = sizeof(s1) / sizeof(s1[0]);
    printf("Original 1: ");
    printArray(s1, size1);
    
    reverseString(s1, size1);
    
    printf("Reversed 1: ");
    printArray(s1, size1); // Expected: ["o","l","l","e","h"]

    // Example 2: s = ["H","a","n","n","a","h"]
    char s2[] = {'H', 'a', 'n', 'n', 'a', 'h'};
