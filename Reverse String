#include <stddef.h> // For size_t

/**
 * @brief Reverses a string (represented as an array of characters) in-place.
 * * This function uses the two-pointer approach to swap characters from the start 
 * and end of the array until the pointers meet or cross, achieving O(1) extra memory usage.
 * * @param s The input array of characters.
 * @param sSize The number of characters in the array.
 */
void reverseString(char* s, size_t sSize) {
    // Check for edge cases: empty array or single-element array, where no action is needed.
    if (s == NULL || sSize <= 1) {
        return;
    }

    // Initialize two pointers: 'left' at the start and 'right' at the end.
    size_t left = 0;
    size_t right = sSize - 1;

    // Continue swapping as long as the left pointer is to the left of the right pointer.
    while (left < right) {
        // 1. Swap the characters at the left and right pointers.
        char temp = s[left];
        s[left] = s[right];
        s[right] = temp;

        // 2. Move the pointers towards the center.
        left++;
        right--;
    }
}

